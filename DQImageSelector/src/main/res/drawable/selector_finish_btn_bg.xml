<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/selector_finish_btn_selector_color"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/selector_finish_btn_default_color"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>